{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src/electron",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2023", "dom"]
  },
  "exclude": ["node_modules", "dist/www", "out/**", "src/svelte/**"],
  "include": ["src/electron/**/*"]
}
